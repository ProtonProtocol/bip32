{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "./src",
    "rootDir": "./ts-src",
    "declaration": true,
    "declarationDir": "./types",
    "types": [
      "node"
    ],
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": false
  },
  "include": [
      "ts-src/*.ts"
  ],
  "exclude": [
      "**/*.spec.ts",
      "node_modules/**/*"
  ]
}
